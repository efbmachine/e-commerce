extends clientLayout

block content
    .index
        .container-fluid
            .selection
                p
                    b Bienvenue :)
                p Commandez vos aliments favoris et faites vous livrer a DOMICILE
                a(href='/signin')
                    button#connect.btn.btn-primary(type='button')
                        |Je me connecte



            .selection
                p
                    b Rayon
                if(!category)
                    p Aucun rayon existant
                else
                    .flex-container
                        each subCat in category.subCats
                            a(href='category/'+category.name+'/'+subCat._id)
                                .box
                                    p= subCat.name
            p= connected
    script.
        connected=#{connected}
        if(connected==true){
            var x = document.getElementById("connect");
            x.remove()
            var y = document.getElementById('shoppingCart')
            var child = document.createElement('div')
            child.innerHTML = items
            y.appendChild(child)
        }
