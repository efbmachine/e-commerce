extends clientLayout

block content
    .index
        .container-fluid
            .selection
                p
                    b Bienvenue :)
                p Commandez vos aliments favoris et faites vous livrer a DOMICILE
                a#signin(href='/signin')
                    button#connect.btn.btn-primary(type='button')
                        |Je me connecte



            .selection
                p
                    b Rayon
                if(!subCats)
                    p Aucun rayon existant
                else
                    .flex-container
                        each item in subCats
                            a(href=`/category/${item.cat.name}/${item.subcat._id}`)
                                .box
                                    p=item.subcat.name
    script.
        let connected = `#{connected}`
        if(connected == "true"){
            var x = document.getElementById("connect");
            x.innerHTML = 'Je me deconnecte'
            var y = document.getElementById('signin')
            y.href = '/logout'
        }
