extends clientLayout

block content

    #main(style='text-align:center')
        .signin
            h3 Se Connecter
            form(action = "/signin" method = "POST")
                input(name = "email" type = "email" required placeholder = "Email Address")
                br
                input(name = "password" type = "password" required placeholder = "Password" minlength=7)
                br
                br
                button(type = "Submit") Sign me in!
                br
                br

                h4
                    p
                        b Ou
                    //a.btn.btn-primary(href='/auth/facebook') Se connecter avec Facebook
                    div(class="fb-login-button" data-size="large" data-button-type="continue_with" data-layout="default" data-auto-logout-link="false" data-use-continue-as="false" data-width="")

                hr


                br

    h4 Vous n'avez pas encore de compte ?
        a(href='/signup') Creer un compte

